{
  "compilerOptions": {
    "pretty": true,
    "target": "es2015",
    "module": "esnext",
    "lib": [
      "es2017",
      "DOM"
    ],
    "jsx": "react",
    "sourceMap": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "allowJs": false,
    "downlevelIteration": true,
    "skipLibCheck": true,
    "strict": true,

    "moduleResolution": "node",
    "types": [
      "node",
      "jest"
    ],
    "typeRoots": [
      "./node_modules/@types"
    ],
    "baseUrl": "./src",
    "paths": {
      "~*": [
        "*"
      ]
    },
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true
  },
  "include": [
    "./src/**/*.ts",
    "./src/**/*.tsx"
  ]
}
